// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  groups   Group[]
}

model Group {
  id      Int      @id @default(autoincrement())
  name    String
  users   User[]
  reminders Reminder[]
}

model Reminder {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  dueDate     DateTime
  color       String
  groupId     Int
  group       Group    @relation(fields: [groupId], references: [id])
}
